<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:paddingRight="5dp"
   >
    <ImageView
        android:id="@+id/tri"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="-22dp"
        android:background="@drawable/tringle"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
       >
    </ImageView>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:padding="10dp"
        android:layout_below="@id/tri"
        android:background="@color/black"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Audio Types"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:textColor="#FFFFFF"/>

        <CheckBox
            android:id="@+id/cb_first"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:backgroundTint="@color/colorWhite"
            android:buttonTint="@color/checkboxselector"
            android:textStyle="normal"
            android:text="Question and Answer"
            android:textColor="#FFF"
            android:layout_margin="5dp"
            />

        <CheckBox
            android:id="@+id/cb_second"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:backgroundTint="@color/colorWhite"
            android:buttonTint="@color/checkboxselector"
            android:textStyle="normal"
            android:text="Definitions"
            android:textColor="#FFF"
            android:layout_margin="5dp"

            />
        <CheckBox
            android:id="@+id/cb_third"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:backgroundTint="@color/colorWhite"
            android:buttonTint="@color/checkboxselector"
            android:textStyle="normal"
            android:text="Explanation"
            android:textColor="#FFF"
            android:layout_margin="5dp"
            />

        <CheckBox
            android:id="@+id/cb_four"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:backgroundTint="@color/colorWhite"
            android:buttonTint="@color/checkboxselector"
            android:textStyle="normal"
            android:text="Summary"
            android:checked="false"
            android:textColor="#FFF"
            android:layout_margin="5dp"

            />
    </LinearLayout>

</LinearLayout>