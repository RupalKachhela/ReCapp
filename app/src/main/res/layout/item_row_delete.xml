<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/card_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_btn_roundcorner_white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chapter"
                    android:textStyle="bold"
                    android:textColor="@color/font_colorBlack"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/txt_chapter_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DNA prep"
                    android:textStyle="normal"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorOrange"
                    android:textSize="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Topic"
                    android:textStyle="bold"
                    android:textColor="@color/font_colorBlack"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/txt_topic_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DNA makeup"
                    android:textStyle="normal"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorOrange"
                    android:textSize="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recording"
                    android:textStyle="bold"
                    android:textColor="@color/font_colorBlack"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/txt_record_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My qs"
                    android:textStyle="normal"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorOrange"
                    android:textSize="15dp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>