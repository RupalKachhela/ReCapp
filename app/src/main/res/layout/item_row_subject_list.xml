<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:id="@+id/rl_subject"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_addSubject"
        android:layout_width="110dp"
        android:layout_height="115dp"
        app:cardCornerRadius="12dp"
        android:elevation="5dp"
        android:layout_margin="15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_subjectShortName_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorTransparent"
                android:textColor="@color/font_colorBlack"
                android:textStyle="bold"
                android:textSize="50dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/txt_subjectName_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorGrey_btn"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>